<% include header %>
<div class="main" id="blogInfo">
	<table class="table1">
		<tr>
			<td class="td1">&nbsp;</td>
			<td><h2>博客信息管理</h2></td>
		</tr>
		<tr>
			<td class="td1">标题：</td>
			<td><input type="text" name="title" class="form-control wd3" value="<%- blogInfo.title %>" /></td>
		</tr>
		<tr>
			<td class="td1">关键词：</td>
			<td><textarea name="keywords" class="form-control wd6 hg1"><%- blogInfo.keywords %></textarea></td>
		</tr>
		<tr>
			<td class="td1">描述：</td>
			<td><textarea name="description" class="form-control wd6 hg1"><%- blogInfo.description %></textarea></td>
		</tr>
		<tr>
			<td class="td1">版权：</td>
			<td><textarea name="copyright" class="form-control wd6 hg1"><%- blogInfo.copyright %></textarea></td>
		</tr>
		<tr>
			<td class="td1">&nbsp;</td>
			<td><a href="javascript:void(0)" class="btn" data-id="<%- blogInfo._id %>">确定</a></td>
		</tr>
	</table>
</div>
<% include footer %>